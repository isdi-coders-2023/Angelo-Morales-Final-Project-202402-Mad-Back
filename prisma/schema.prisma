generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model Watch {
id                String  @id @default(cuid())
brand             String
author             User  @relation(fields: [authorId], references: [id])
authorId          String
model             String
cristal           String
waterResist       String
size              String
price             Int
machine           String
image             String @default("sample.jpg")
}


model User {
id              String      @id @default(cuid())
email           String      @unique
name            String
password        String
LastName        String
role              Role      @default(user)
watchs Watch[]
}

enum Role {
user
admin
}


 model Carrito {
    id                String      @id @default(cuid())
    brand             String
    price             Int
    description       String
    image             String
    orders Order[]
  }


  model Order {
    id                String      @id @default(cuid())
    quantity          Int
    total             Int
    carrito Carrito[]
  }
  
